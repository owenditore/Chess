<Window x:Class="ChessUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessUI"
        mc:Ignorable="d"
        Title="Chess" Width="600" SizeToContent="Height"
        Icon="/Assets/icon.ico"
        WindowStartupLocation="CenterScreen"
        Background="#101010">
    <Viewbox>

        <Grid x:Name="BoardGrid"
              Width="600"
              Height="600"
              MouseDown="BoardGrid_MouseDown"
              Visibility="Visible">

            <Grid.Background>
                <ImageBrush ImageSource="/Assets/Board.png"/>
            </Grid.Background>


            <TextBlock x:Name="PlayLocalOrOnline"
                       Width="400"
                       FontSize="30"
                       Text="How Do You Want To Play?"
                       TextAlignment="Center"
                       Background="LightGray"
                       Visibility="Visible"
                       Margin="100,86,100,464"/>

            <TextBlock x:Name="NewOrReturningUser"
                       Width="500"
                       FontSize="30"
                       Text="Are You A New Or Returning User?"
                       TextAlignment="Center"
                       Background="LightGray"
                       Visibility="Collapsed"
                       Margin="0,86,0,464"/>

            <Button x:Name="Local"
                    Height="75"
                    Width="300"
                    Click="Local_Click"
                    HorizontalAlignment="Center"
                    Content="Local"
                    FontSize="30"
                    Visibility="Visible"
                    Margin="0,188,0,337">
            </Button>

            <Button x:Name="Online"
                    Height="75"
                    Width="300"
                    Click="Online_Click"
                    HorizontalAlignment="Center"
                    Content="Online"
                    FontSize="30"
                    Visibility="Visible"
                    Margin="0,338,0,187">
            </Button>

            <Button x:Name="NewUser"
                    Height="75"
                    Width="300"
                    Click="Local_Click"
                    HorizontalAlignment="Center"
                    Content="New"
                    FontSize="30"
                    Visibility="Collapsed"
                    Margin="0,188,0,337">
            </Button>

            <Button x:Name="ReturningUser"
                    Height="75"
                    Width="300"
                    Click="Online_Click"
                    HorizontalAlignment="Center"
                    Content="Returning"
                    FontSize="30"
                    Visibility="Collapsed"
                    Margin="0,338,0,187">
            </Button>

            <UniformGrid x:Name="HighlightGrid"
                         Rows="8"
                         Columns="8">
            </UniformGrid>

            <UniformGrid x:Name="PieceGrid"
                         Rows="8"
                         Columns="8">

            </UniformGrid>



            <TextBlock x:Name="Draw" 
                        Text="Draw" 
                        FontSize="30"
                        Height="45"
                        Width="200"
                        Background="LightGray"
                        TextAlignment="Center"
                        Visibility="Hidden"
                        Margin="200,278,200,278"/>
            
            <TextBlock x:Name="Checkmate" 
                        Text="Checkmate!" 
                        FontSize="30"
                        Height="45"
                        Width="200"
                        Background="LightGray"
                        TextAlignment="Center"
                        Visibility="Hidden"
                        Margin="200,278,200,278"/>


        </Grid>

    </Viewbox>


</Window>
