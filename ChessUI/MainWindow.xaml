<Window x:Class="ChessUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessUI"
        mc:Ignorable="d"
        Title="Chess" Width="600" SizeToContent="Height"
        Icon="/Assets/icon.ico"
        WindowStartupLocation="CenterScreen"
        Background="#101010">
    <Viewbox>

        <Grid x:Name="BoardGrid"
              Width="600"
              Height="600"
              MouseDown="BoardGrid_MouseDown"
              Visibility="Visible">

            <Grid.Background>
                <ImageBrush ImageSource="/Assets/Board.png"/>
            </Grid.Background>

            <ListBox Name="ListOfUsers"
                     SelectionChanged="ListOfUsers_SelectionChanged"
                     Width="300"
                     Height="300"
                     Background="LightGray"
                     Visibility="Collapsed"
                     Margin="150,268,150,32">

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">

                            <TextBlock Text="{Binding}">
                                
                            </TextBlock>
                            
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                
            </ListBox>

            <ListBox Name="ListOfJoinableGames"
                     SelectionChanged="ListOfJoinableGames_SelectionChanged"
                     Width="300"
                     Height="300"
                     Background="LightGray"
                     Visibility="Collapsed"
                     Margin="150,268,150,32">

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">

                            <TextBlock Text="{Binding GameID}">

                            </TextBlock>

                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>

            </ListBox>


            <TextBlock x:Name="PlayLocalOrOnline"
                       Width="400"
                       FontSize="30"
                       Text="How Do You Want To Play?"
                       TextAlignment="Center"
                       Background="LightGray"
                       Visibility="Visible"
                       Margin="100,86,100,464"/>

            <TextBlock x:Name="NewUserEnterUsername"
                       Width="500"
                       FontSize="30"
                       Text="Please Enter A New Username."
                       TextAlignment="Center"
                       Background="LightGray"
                       Visibility="Collapsed"
                       Margin="0,86,0,464"/>

            <TextBlock x:Name="ReturningUserEnterUsername"
                       Width="500"
                       FontSize="30"
                       Text="Please Enter Your Username."
                       TextAlignment="Center"
                       Background="LightGray"
                       Visibility="Collapsed"
                       Margin="0,86,0,464"/>

            <TextBlock x:Name="SelecteWhoYouWantToPlay"
                       Width="500"
                       FontSize="30"
                       Text="Select Who You Want To Play."
                       TextAlignment="Center"
                       Background="LightGray"
                       Visibility="Collapsed"
                       Margin="0,86,0,464"/>

            <TextBlock x:Name="SelectGameToJoin"
                       Width="500"
                       FontSize="30"
                       Text="Select Game To Join."
                       TextAlignment="Center"
                       Background="LightGray"
                       Visibility="Collapsed"
                       Margin="0,86,0,464"/>


            <TextBlock x:Name="InvalidUsername"
                       FontSize="30"
                       Text="Invalid Username"
                       TextAlignment="Center"
                       Background="LightGray"
                       Visibility="Collapsed"
                       Margin="150,450,150,100"/>

            <TextBox x:Name="UsernameEntryBox"
                     Height="30"
                       Width="300"
                       FontSize="23"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Background="LightGray"
                       Visibility="Collapsed"
                       Margin="0,188,0,337"/>

            <Button x:Name="Local"
                    Height="75"
                    Width="300"
                    Click="Local_Click"
                    HorizontalAlignment="Center"
                    Content="Local"
                    FontSize="30"
                    Visibility="Visible"
                    Margin="0,188,0,337">
            </Button>

            <Button x:Name="Online"
                    Height="75"
                    Width="300"
                    Click="Online_Click"
                    HorizontalAlignment="Center"
                    Content="Online"
                    FontSize="30"
                    Visibility="Visible"
                    Margin="0,338,0,187">
            </Button>

            <Button x:Name="NewUser"
                    Height="75"
                    Width="300"
                    Click="NewUser_Click"
                    HorizontalAlignment="Center"
                    Content="Create Account"
                    FontSize="30"
                    Visibility="Collapsed"
                    Margin="0,188,0,337">
            </Button>

            <Button x:Name="ReturningUser"
                    Height="75"
                    Width="300"
                    Click="Returning_Click"
                    HorizontalAlignment="Center"
                    Content="Login"
                    FontSize="30"
                    Visibility="Collapsed"
                    Margin="0,338,0,187">
            </Button>

            <Button x:Name="Enter"
                    Height="75"
                    Width="300"
                    Click="Enter_Click"
                    HorizontalAlignment="Center"
                    Content="Enter"
                    FontSize="30"
                    Visibility="Collapsed"
                    Margin="0,338,0,187">
            </Button>

            <Button x:Name="NewGame"
                    Height="75"
                    Width="300"
                    Click="NewGame_Click"
                    HorizontalAlignment="Center"
                    Content="New Game"
                    FontSize="30"
                    Visibility="Collapsed"
                    Margin="0,188,0,337">
            </Button>

            <Button x:Name="ResumeGame"
                    Height="75"
                    Width="300"
                    Click="ResumeGame_Click"
                    HorizontalAlignment="Center"
                    Content="Join Game"
                    FontSize="30"
                    Visibility="Collapsed"
                    Margin="0,338,0,187">
            </Button>

            <UniformGrid x:Name="HighlightGrid"
                         Rows="8"
                         Columns="8">
            </UniformGrid>

            <UniformGrid x:Name="PieceGrid"
                         Rows="8"
                         Columns="8">

            </UniformGrid>



            <TextBlock x:Name="Draw" 
                        Text="Draw" 
                        FontSize="30"
                        Height="45"
                        Width="200"
                        Background="LightGray"
                        TextAlignment="Center"
                        Visibility="Hidden"
                        Margin="200,278,200,278"/>

            <TextBlock x:Name="Checkmate" 
                        Text="Checkmate!" 
                        FontSize="30"
                        Height="45"
                        Width="200"
                        Background="LightGray"
                        TextAlignment="Center"
                        Visibility="Hidden"
                        Margin="200,278,200,278"/>


        </Grid>

    </Viewbox>


</Window>
